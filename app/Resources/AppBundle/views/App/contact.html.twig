{% extends '::base.html.twig' %}

{% block title %}
    {{ 'views.app.contact.title'|trans }}
{% endblock title %}

{% block page %}

    <div class="row">
        <div class="small-12 columns">
            <h1 class="headertitle text-center">
                {{ 'views.app.contact.title'|trans }}
            </h1>
        </div>
    </div>

    <div class="row">
        <div class="medium-6 columns panel contact">
            {% if is_granted('ROLE_USER') %}
                <h2 class="headertitle text-center">
                    {{ 'views.app.contact.title1'|trans }}
                </h2>

                <p>
                    {{ form(form) }}
                </p>
            {% else %}
                <h2 class="headertitle text-center">
                    {{ 'views.app.contact.needlogin'|trans }}
                </h2>
                <h3 class="text-center">
                    <a href="{{ path('hwi_oauth_connect') }}" class="tiny button">
                        {{ 'views.app.contact.login'|trans }}
                    </a>
                </h3>
            {% endif %}
        </div>
        <div class="medium-6 columns panel contact">
            <h2 class="headertitle text-center">
                {{ 'views.app.contact.title2'|trans }}
            </h2>

            <p class="google_map_frame text-center">
                <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d20285.234759616236!2d3.109035436490929!3d50.54060032642828!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0xa72d9b9cb7e94804!2sFEEL!5e0!3m2!1sfr!2sfr!4v1422197125360"
                        width="400" height="300" frameborder="0" style="border:0"></iframe>
            </p>
        </div>
    </div>

    <div class="row">
        <div class="small-10 small-centered columns">
            <p class="text-center">
                {{ 'views.app.contact.contact'|trans|raw }}
            </p>
        </div>
    </div>

{% endblock page %}